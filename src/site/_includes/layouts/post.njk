---
layout: default
pageClass: posts
templateEngineOverride: njk, md
---
<section class="bg-white shadow-md rounded-md px-8 py-6 mb-2">
  <time value="{{ item.date }}" class="text-gray-600">{{ date | readableDate }}</time>
  <h1 class="heading">{{ title }}</h1>

  <div class="mb-2 font-medium">
    {{ content | section | safe }}
  </div>

  {% include '../components/icon-bar.njk' %}

  <div>
    {{ content | section('remainder') | safe }}
  </div>

  {% include '../components/icon-bar.njk' %}

  <div class="mt-12 pt-4 text-gray-600 text-sm border-t border-gray-300">
    <p>
      This page is part of the <a href="/blog">blog</a> section.
    </p>
  </div>
</section>
